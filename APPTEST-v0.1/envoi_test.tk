proc ROU_serialize { paramChaine_aSerialiser } {
    set SerializeChaine ""
    foreach route $paramChaine_aSerialiser {

        append SerializeChaine $route "," 
    }
    set resultat [regsub "\,$" $SerializeChaine ""]
    return $resultat

}

